   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
   <children>
      <Text text="Welcome to a new game of Rock, Paper, Scissors" styleClass="headings"/>
      <Button fx:id="primaryButton" text="Start Game" onAction="#switchToPlayerOneScreen" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
